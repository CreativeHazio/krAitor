<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.activity.PayNowOrLaterActivity">

    <!--TODO Add a pay now and enjoy ads free experience background-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/pay_now_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="400dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cornerRadius="30dp"
        android:text="@string/pay_now"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pay_later_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/transparent"
        app:cornerRadius="30dp"
        android:text="@string/pay_later"
        android:textColor="@color/light_blue"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/pay_now_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>